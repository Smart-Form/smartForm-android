<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".language">

    <ImageView
        android:id="@+id/bg"

        android:layout_width="428dp"
        android:layout_height="737dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/bg"
        />

    <ImageView
        android:id="@+id/smartform_logo"

        android:layout_width="81dp"
        android:layout_height="85dp"

        android:layout_marginStart="264dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="601dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/smartform_logo"
        />

    <TextView
        android:id="@+id/smart_form"

        android:layout_width="172dp"
        android:layout_height="31dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="542dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/smart_form"
        android:textAppearance="@style/smart_form"
        />

    <TextView
        android:id="@+id/lang"

        android:layout_width="114dp"
        android:layout_height="97dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="410dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/lang"
        android:textAppearance="@style/lang"
        />

    <TextView
        android:id="@+id/lang2"

        android:layout_width="114dp"
        android:layout_height="30dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/lang2"
        android:textAppearance="@style/lang2"
        />

    <ImageView
        android:id="@+id/line"

        android:layout_width="142dp"
        android:layout_height="2dp"

        android:layout_marginStart="37dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/line"
        />

    <ImageButton
        android:id="@+id/cht"

        android:layout_width="168dp"
        android:layout_height="168dp"

        android:layout_marginStart="21dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/cht"
        />

    <ImageButton
        android:id="@+id/eng"

        android:layout_width="168dp"
        android:layout_height="168dp"

        android:layout_marginStart="239dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/eng"
        />

</androidx.constraintlayout.widget.ConstraintLayout>