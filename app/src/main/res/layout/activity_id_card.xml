<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".id_card">

    <ImageView
        android:id="@+id/bg2"

        android:layout_width="448dp"
        android:layout_height="551dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/bg2"
 />

    <TextView
        android:id="@+id/instruc"

        android:layout_width="358dp"
        android:layout_height="57dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="560dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/instruc"
        android:textAppearance="@style/instruc"
        />

    <ImageView
        android:id="@+id/idcard"

        android:layout_width="354dp"
        android:layout_height="223dp"

        android:layout_marginStart="37dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="257dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/idcard"
        />

    <ImageButton
        android:id="@+id/loading"

        android:layout_width="57dp"
        android:layout_height="57dp"

        android:layout_marginStart="180dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/loading"
        />

    <TextView
        android:id="@+id/loading_txt"

        android:layout_width="50dp"
        android:layout_height="18dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/loading_txt"
        android:textAppearance="@style/loading_txt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>