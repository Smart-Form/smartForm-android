<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".select">

    <ImageView
        android:id="@+id/bg"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:background="@android:color/white"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_titleStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.075" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_titleEnd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.925" />

    <TextView
        android:id="@+id/back"

        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:drawableEnd="@drawable/ic_baseline_account_box_24"
        android:drawableTint="#D3AC9C"

        android:text="Select Your Welfare"
        android:foreground="?android:attr/selectableItemBackground"
        android:autoSizeTextType="uniform"
        android:textColor="#000000"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/guideline_titleStart"
        app:layout_constraintEnd_toEndOf="@id/guideline_titleEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_bias="0.025"
        />

    <Button
        android:id="@+id/gov_form"

        android:layout_width="300dp"
        android:layout_height="75dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_titleStart"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Government"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/title4"
        android:maxLines="1"
        android:backgroundTint="#D3AC9C"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.08"
        />

    <Button
        android:id="@+id/com_form"

        android:layout_width="300dp"
        android:layout_height="75dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_titleEnd"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Company"
        android:textColor="#000000"
        android:textAppearance="@style/title4"
        android:maxLines="1"
        android:backgroundTint="#CCCCCC"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.08"
        />

    <View
        android:id="@+id/view"

        android:layout_width="0dp"
        android:layout_height="175dp"

        android:background="@android:color/white"

        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/confirm_button"

        android:layout_width="0dp"
        android:layout_height="125dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_titleStart"
        app:layout_constraintEnd_toEndOf="@+id/guideline_titleEnd"
        app:layout_constraintTop_toTopOf="parent"

        android:text="CONFIRM"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:backgroundTint="#D3AC9C"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"

        app:layout_constraintVertical_bias="0.975"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_titleStart2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.075" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_titleEnd2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.925" />

            <ImageButton
                android:id="@+id/banner"

                android:layout_width="0dp"
                android:layout_height="400dp"

                android:background="@drawable/banner"

                app:layout_constraintEnd_toEndOf="@id/guideline_titleEnd2"
                app:layout_constraintStart_toStartOf="@id/guideline_titleStart2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/banner2"

                android:layout_width="0dp"
                android:layout_height="400dp"

                android:layout_marginTop="40dp"
                android:background="@drawable/banner2"

                app:layout_constraintEnd_toEndOf="@id/guideline_titleEnd2"
                app:layout_constraintStart_toStartOf="@id/guideline_titleStart2"
                app:layout_constraintTop_toBottomOf="@id/banner" />

            <ImageButton
                android:id="@+id/banner3"

                android:layout_width="0dp"
                android:layout_height="400dp"

                android:layout_marginTop="40dp"
                android:background="@drawable/banner"

                app:layout_constraintEnd_toEndOf="@id/guideline_titleEnd2"
                app:layout_constraintStart_toStartOf="@id/guideline_titleStart2"
                app:layout_constraintTop_toBottomOf="@id/banner2" />

            <ImageButton
                android:id="@+id/banner4"

                android:layout_width="0dp"
                android:layout_height="400dp"

                android:layout_marginTop="40dp"
                android:background="@drawable/banner2"

                app:layout_constraintEnd_toEndOf="@id/guideline_titleEnd2"
                app:layout_constraintStart_toStartOf="@id/guideline_titleStart2"
                app:layout_constraintTop_toBottomOf="@id/banner3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>